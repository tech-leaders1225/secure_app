<% provide(:title, @user.name) %>
<% provide(:search_name, 'コンテンツ検索') %>
<% provide(:path, user_path) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>シェアコンテンツ (<%= @user.microposts.count %>)</h3>
      <%= render 'users/search' %>  　<!-- searchパーシャル呼出 -->
      <ol class="microposts">
        <%= raw Rinku.auto_link(h(render @microposts)) %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>